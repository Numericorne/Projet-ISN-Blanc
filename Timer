import tkinter

def Timer():
    global temps
    temps+= 0.01
    if flag > 0 :
        fen.after(10,Timer)
        print((int((temps*100)))/100)

def Flag():
    global flag
    if flag == 0:
        flag = 1
        Timer()
        
temps, flag = 0,0
fen = Tk()
Bou = Button(text="Timer",command=Flag)
Bou.pack()
fen.mainloop()
